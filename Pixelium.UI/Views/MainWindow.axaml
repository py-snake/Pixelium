<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Pixelium.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Pixelium.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Pixelium Image Editor"
        Icon="/Assets/icon-256.png"
        Width="1200" Height="800">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.KeyBindings>
        <!-- File Operations -->
        <KeyBinding Gesture="Ctrl+N" Command="{Binding NewCommand}"/>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenCommand}"/>
        <KeyBinding Gesture="Ctrl+S" Command="{Binding SaveCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+S" Command="{Binding SaveAsCommand}"/>

        <!-- Edit Operations -->
        <KeyBinding Gesture="Ctrl+Z" Command="{Binding UndoCommand}"/>
        <KeyBinding Gesture="Ctrl+Y" Command="{Binding RedoCommand}"/>

        <!-- View/Zoom Operations -->
        <KeyBinding Gesture="Ctrl+Add" Command="{Binding ZoomInCommand}"/>
        <KeyBinding Gesture="Ctrl+Subtract" Command="{Binding ZoomOutCommand}"/>
        <KeyBinding Gesture="Ctrl+D0" Command="{Binding ZoomActualCommand}"/>
        <KeyBinding Gesture="Ctrl+F" Command="{Binding FitToScreenCommand}"/>

        <!-- Image Operations -->
        <KeyBinding Gesture="Ctrl+G" Command="{Binding GrayscaleCommand}"/>
        <KeyBinding Gesture="Ctrl+I" Command="{Binding InvertCommand}"/>
        <KeyBinding Gesture="Ctrl+H" Command="{Binding FlipHorizontalCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+H" Command="{Binding FlipVerticalCommand}"/>
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewCommand}" InputGesture="Ctrl+N"/>
                <MenuItem Header="_Open..." Command="{Binding OpenCommand}" InputGesture="Ctrl+O"/>
                <MenuItem Header="_Save" Command="{Binding SaveCommand}" InputGesture="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsCommand}" InputGesture="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="New Sample Image">
                    <MenuItem Header="Sample 1: Gradient &amp; Text" Command="{Binding CreateSample1Command}"/>
                    <MenuItem Header="Sample 2: Geometric Shapes" Command="{Binding CreateSample2Command}"/>
                    <MenuItem Header="Sample 3: Color Test Pattern" Command="{Binding CreateSample3Command}"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitCommand}" InputGesture="Alt+F4"/>
            </MenuItem>

            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="{Binding UndoCommand}" InputGesture="Ctrl+Z"/>
                <MenuItem Header="_Redo" Command="{Binding RedoCommand}" InputGesture="Ctrl+Y"/>
            </MenuItem>
            
            <MenuItem Header="_View">
                <MenuItem Header="Zoom _In" Command="{Binding ZoomInCommand}" InputGesture="Ctrl+Add"/>
                <MenuItem Header="Zoom _Out" Command="{Binding ZoomOutCommand}" InputGesture="Ctrl+Subtract"/>
                <MenuItem Header="Zoom _100%" Command="{Binding ZoomActualCommand}" InputGesture="Ctrl+D0"/>
                <Separator/>
                <MenuItem Header="Fit to _Width" Command="{Binding FitToWidthCommand}"/>
                <MenuItem Header="Fit to _Height" Command="{Binding FitToHeightCommand}"/>
                <MenuItem Header="Fit to _Screen" Command="{Binding FitToScreenCommand}" InputGesture="Ctrl+F"/>
                <MenuItem Header="_Stretch" Command="{Binding StretchCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Image">
                <MenuItem Header="_Grayscale" Command="{Binding GrayscaleCommand}" InputGesture="Ctrl+G"/>
                <MenuItem Header="_Invert" Command="{Binding InvertCommand}" InputGesture="Ctrl+I"/>
                <Separator/>
                <MenuItem Header="Flip _Horizontal" Command="{Binding FlipHorizontalCommand}" InputGesture="Ctrl+H"/>
                <MenuItem Header="Flip _Vertical" Command="{Binding FlipVerticalCommand}" InputGesture="Ctrl+Shift+H"/>
            </MenuItem>
            
            <MenuItem Header="_Adjustments">
                <MenuItem Header="_Gamma Correction..." Command="{Binding OpenGammaDialogCommand}"/>
                <MenuItem Header="_Logarithmic Transform..." Command="{Binding OpenLogarithmicDialogCommand}"/>
                <Separator/>
                <MenuItem Header="Show _Histogram" Command="{Binding ShowHistogramCommand}"/>
                <MenuItem Header="Histogram _Equalization" Command="{Binding ApplyHistogramEqualizationCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Filters">
                <MenuItem Header="_Box Filter..." Command="{Binding OpenBoxFilterDialogCommand}"/>
                <MenuItem Header="_Gaussian Blur..." Command="{Binding OpenGaussianDialogCommand}"/>
                <Separator/>
                <MenuItem Header="_Sobel Edge Detection" Command="{Binding ApplySobelCommand}"/>
                <MenuItem Header="_Laplace Edge Detection" Command="{Binding ApplyLaplaceCommand}"/>
                <Separator/>
                <MenuItem Header="_Harris Corner Detection..." Command="{Binding OpenHarrisDialogCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Layers">
                <!-- <MenuItem Header="_New Layer" Command="{Binding AddLayerCommand}"/> -->
                <!-- Commented out: Empty layers are not useful without drawing tools. Uncomment when brush/paint features are added -->
                <MenuItem Header="_Duplicate Layer" Command="{Binding DuplicateLayerCommand}"/>
                <MenuItem Header="_Remove Layer" Command="{Binding RemoveLayerCommand}"/>
                <MenuItem Header="_Merge Down" Command="{Binding MergeDownCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="*,250">
            
            <!-- Image Display Area -->
            <Border Grid.Column="0" 
                    Background="#2A2A2A" 
                    BorderBrush="#404040" 
                    BorderThickness="1"
                    Padding="10"
                    x:Name="ImageContainer">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                             VerticalScrollBarVisibility="Auto"
                             x:Name="ImageScroller">
                    <Viewbox Stretch="{Binding ImageStretch}"
                             StretchDirection="Both"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center">
                        <Image Source="{Binding ImageSource}" 
                               Width="{Binding ImageDisplayWidth}"
                               Height="{Binding ImageDisplayHeight}"/>
                    </Viewbox>
                </ScrollViewer>
            </Border>

            <!-- Layers Panel -->
            <Border Grid.Column="1" 
                    Background="#1E1E1E" 
                    BorderBrush="#404040" 
                    BorderThickness="1,1,0,0"
                    Padding="10">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top"
                              Text="Layers"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,10"/>

                    <!-- Layer List -->
                    <ListBox DockPanel.Dock="Top"
                            ItemsSource="{Binding Layers}"
                            SelectedItem="{Binding SelectedLayer}"
                            Background="#2A2A2A"
                            Height="350"
                            Margin="0,0,0,10"
                            BorderBrush="#555"
                            BorderThickness="1">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                       Padding="8,6"
                                       BorderBrush="#444"
                                       BorderThickness="0,0,0,1">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <!-- Visibility Toggle -->
                                        <CheckBox Grid.Column="0"
                                                 IsChecked="{Binding Visible, Mode=TwoWay}"
                                                 Margin="0,0,10,0"
                                                 VerticalAlignment="Center"
                                                 ToolTip.Tip="Toggle layer visibility (click to show/hide)"/>

                                        <!-- Layer Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}"
                                                      Foreground="White"
                                                      FontWeight="Medium"
                                                      FontSize="13"/>
                                            <TextBlock Text="{Binding Opacity, StringFormat='Opacity: {0:P0}'}"
                                                      Foreground="#888"
                                                      FontSize="10"
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Lock Indicator -->
                                        <TextBlock Grid.Column="2"
                                                  Text="ðŸ”’"
                                                  FontSize="14"
                                                  Foreground="#FF9800"
                                                  VerticalAlignment="Center"
                                                  Margin="10,0,0,0"
                                                  ToolTip.Tip="Layer is locked"
                                                  IsVisible="{Binding IsLocked}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Layer Info -->
                    <TextBlock DockPanel.Dock="Top"
                              Text="Layer Controls:"
                              FontSize="12"
                              FontWeight="SemiBold"
                              Foreground="White"
                              Margin="0,0,0,5"/>

                    <!-- Layer Controls -->
                    <StackPanel DockPanel.Dock="Bottom" Spacing="5">
                        <!-- <Button Content="âž• Add Layer"
                               Command="{Binding AddLayerCommand}"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Padding="8"/> -->
                        <!-- Commented out: Empty layers not useful without drawing tools -->
                        <Button Content="ðŸ“‹ Duplicate Layer"
                               Command="{Binding DuplicateLayerCommand}"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Padding="8"/>
                        <Button Content="ðŸ—‘ï¸ Remove Layer"
                               Command="{Binding RemoveLayerCommand}"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Padding="8"/>
                        <Button Content="â¬‡ï¸ Merge Down"
                               Command="{Binding MergeDownCommand}"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               Padding="8"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="#007ACC"
                Padding="10,5">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                <TextBlock Grid.Column="0"
                          Text="{Binding StatusMessage}"
                          Foreground="White"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>

                <!-- Edit Mode Toggle -->
                <StackPanel Grid.Column="1"
                           Orientation="Horizontal"
                           Margin="10,0">
                    <CheckBox IsChecked="{Binding IsNonDestructiveMode}"
                             Foreground="White"
                             VerticalAlignment="Center"/>
                    <TextBlock Text="Non-Destructive Mode"
                              Foreground="White"
                              Margin="5,0,0,0"
                              VerticalAlignment="Center"
                              ToolTip.Tip="{Binding EditModeDescription}"/>
                </StackPanel>

                <TextBlock Grid.Column="2"
                          Text="{Binding ZoomPercentage, StringFormat='Zoom: {0:F0}%'}"
                          Foreground="White"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Gamma Dialog -->
        <Panel Grid.Row="0" Grid.RowSpan="3" 
               IsVisible="{Binding IsGammaDialogOpen}"
               ZIndex="100">
            <Border Background="#CC000000"/>
            <Border Background="White" 
                   Padding="20"
                   Width="400"
                   Height="220"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   BoxShadow="0 4 16 2 #40000000"
                   CornerRadius="8">
                <StackPanel Spacing="15">
                    <TextBlock Text="Gamma Correction" 
                              FontSize="18" 
                              FontWeight="Bold"/>
                    
                    <TextBlock Text="{Binding GammaDisplayValue}" 
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Foreground="#007ACC"/>
                    
                    <Slider Minimum="0.1" 
                           Maximum="3.0" 
                           Value="{Binding GammaValue}"
                           TickFrequency="0.1"
                           IsSnapToTickEnabled="True"
                           Height="40"/>
                    
                    <Grid ColumnDefinitions="*,*,*">
                        <TextBlock Grid.Column="0" Text="0.1" FontSize="10" Foreground="Gray"/>
                        <TextBlock Grid.Column="1" Text="1.0" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="3.0" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Spacing="10"
                               Margin="0,10,0,0">
                        <Button Content="âœ“ Apply" 
                               Command="{Binding ApplyGammaCommand}"
                               Width="120"
                               Height="35"
                               Background="#28a745"
                               Foreground="White"/>
                        <Button Content="âœ• Cancel" 
                               Command="{Binding CancelGammaCommand}"
                               Width="120"
                               Height="35"
                               Background="#dc3545"
                               Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>

        <!-- Logarithmic Dialog -->
        <Panel Grid.Row="0" Grid.RowSpan="3"
               IsVisible="{Binding IsLogarithmicDialogOpen}"
               ZIndex="100">
            <Border Background="#CC000000"/>
            <Border Background="White" 
                   Padding="20"
                   Width="400"
                   Height="220"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   BoxShadow="0 4 16 2 #40000000"
                   CornerRadius="8">
                <StackPanel Spacing="15">
                    <TextBlock Text="Logarithmic Transform" 
                              FontSize="18" 
                              FontWeight="Bold"/>
                    
                    <TextBlock Text="{Binding LogarithmicDisplayValue}" 
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Foreground="#007ACC"/>
                    
                    <Slider Minimum="0.1" 
                           Maximum="3.0" 
                           Value="{Binding LogarithmicC}"
                           TickFrequency="0.1"
                           IsSnapToTickEnabled="True"
                           Height="40"/>
                    
                    <Grid ColumnDefinitions="*,*,*">
                        <TextBlock Grid.Column="0" Text="0.1" FontSize="10" Foreground="Gray"/>
                        <TextBlock Grid.Column="1" Text="1.0" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="3.0" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Spacing="10"
                               Margin="0,10,0,0">
                        <Button Content="âœ“ Apply" 
                               Command="{Binding ApplyLogarithmicCommand}"
                               Width="120"
                               Height="35"
                               Background="#28a745"
                               Foreground="White"/>
                        <Button Content="âœ• Cancel" 
                               Command="{Binding CancelLogarithmicCommand}"
                               Width="120"
                               Height="35"
                               Background="#dc3545"
                               Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>

        <!-- Box Filter Dialog -->
        <Panel Grid.Row="0" Grid.RowSpan="3"
               IsVisible="{Binding IsBoxFilterDialogOpen}"
               ZIndex="100">
            <Border Background="#CC000000"/>
            <Border Background="White" 
                   Padding="20"
                   Width="400"
                   Height="220"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   BoxShadow="0 4 16 2 #40000000"
                   CornerRadius="8">
                <StackPanel Spacing="15">
                    <TextBlock Text="Box Filter (Average)" 
                              FontSize="18" 
                              FontWeight="Bold"/>
                    
                    <TextBlock Text="{Binding BoxFilterDisplayValue}" 
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Foreground="#007ACC"/>
                    
                    <Slider Minimum="3" 
                           Maximum="15" 
                           Value="{Binding BoxFilterSize}"
                           TickFrequency="2"
                           IsSnapToTickEnabled="True"
                           Height="40"/>
                    
                    <Grid ColumnDefinitions="*,*,*">
                        <TextBlock Grid.Column="0" Text="3x3" FontSize="10" Foreground="Gray"/>
                        <TextBlock Grid.Column="1" Text="9x9" FontSize="10" Foreground="Gray" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="15x15" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Spacing="10"
                               Margin="0,10,0,0">
                        <Button Content="âœ“ Apply" 
                               Command="{Binding ApplyBoxFilterCommand}"
                               Width="120"
                               Height="35"
                               Background="#28a745"
                               Foreground="White"/>
                        <Button Content="âœ• Cancel" 
                               Command="{Binding CancelBoxFilterCommand}"
                               Width="120"
                               Height="35"
                               Background="#dc3545"
                               Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>

        <!-- Gaussian Filter Dialog -->
        <Panel Grid.Row="0" Grid.RowSpan="3"
               IsVisible="{Binding IsGaussianDialogOpen}"
               ZIndex="100">
            <Border Background="#CC000000"/>
            <Border Background="White" 
                   Padding="20"
                   Width="400"
                   Height="300"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   BoxShadow="0 4 16 2 #40000000"
                   CornerRadius="8">
                <StackPanel Spacing="12">
                    <TextBlock Text="Gaussian Blur" 
                              FontSize="18" 
                              FontWeight="Bold"/>
                    
                    <TextBlock Text="{Binding GaussianDisplayValue}" 
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Foreground="#007ACC"/>
                    
                    <TextBlock Text="Sigma (Blur Amount):" 
                              FontSize="12" 
                              FontWeight="SemiBold"/>
                    <Slider Minimum="0.5" 
                           Maximum="3.0" 
                           Value="{Binding GaussianSigma}"
                           TickFrequency="0.1"
                           IsSnapToTickEnabled="True"
                           Height="30"/>
                    
                    <TextBlock Text="Kernel Size:" 
                              FontSize="12" 
                              FontWeight="SemiBold"/>
                    <Slider Minimum="3" 
                           Maximum="11" 
                           Value="{Binding GaussianSize}"
                           TickFrequency="2"
                           IsSnapToTickEnabled="True"
                           Height="30"/>
                    
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center" 
                               Spacing="10"
                               Margin="0,10,0,0">
                        <Button Content="âœ“ Apply" 
                               Command="{Binding ApplyGaussianFilterCommand}"
                               Width="120"
                               Height="35"
                               Background="#28a745"
                               Foreground="White"/>
                        <Button Content="âœ• Cancel" 
                               Command="{Binding CancelGaussianCommand}"
                               Width="120"
                               Height="35"
                               Background="#dc3545"
                               Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Panel>

    </Grid>
</Window>