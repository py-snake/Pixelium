<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Pixelium.UI.Views.SimpleHistogramWindow"
        Title="Histogram"
        Width="600" Height="400"
        Background="#2E2E2E">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Title -->
        <TextBlock Grid.Row="0"
                  Text="Image Histogram (Luminosity)"
                  FontSize="18"
                  FontWeight="Bold"
                  Foreground="White"
                  Margin="0,0,0,15"/>

        <!-- Histogram Canvas -->
        <Border Grid.Row="1"
               Background="#1A1A1A"
               BorderBrush="#555"
               BorderThickness="1"
               Padding="10">
            <Canvas x:Name="HistogramCanvas"
                   Width="550"
                   Height="250"/>
        </Border>

        <!-- Statistics -->
        <StackPanel Grid.Row="2" Margin="0,15,0,0" Spacing="5">
            <TextBlock x:Name="StatsText"
                      Foreground="White"
                      FontSize="13"
                      TextAlignment="Center"/>
            <Button Content="Close"
                   HorizontalAlignment="Center"
                   Padding="30,8"
                   Margin="0,10,0,0"
                   Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
